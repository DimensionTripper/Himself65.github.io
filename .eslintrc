{
  "extends": ["standard", "plugin:vue/recommended"],
  "plugins": ["vue"],
  "env": {
    "browser": true
  },
  "rules": {
    "vue/max-attributes-per-line": ["error", {
      "singleline": 3,
      "multiline": {
        "max": 3,
        "allowFirstLine": false
      }
    }],
    "vue/html-closing-bracket-spacing": "error",
    "vue/html-closing-bracket-newline": ["error", {
        "singleline": "never",
        "multiline": "always"
    }]
  },
  "globals": {
    "_globals": false
  },
  "parserOptions": {
    "parser": "babel-eslint"
  }
}
